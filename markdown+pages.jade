extends base
if request.path.startswith('/pages')
	post = get_doc(path2+'.md') or get_doc(path2+'.txt') or get_doc(path2+'.mk') or get_doc(path2+'.markdown')
block title
	title= post.title + " - " + site.title
block content
	.container
		.col-group
			#main.col-8
				.res-cons
					article.post
						date.post-meta= post.date.format('%B %d, %Y')
						header
							h1.post-title= post.title
						section.post-content= post.content